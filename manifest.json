{
    "manifest_version": 2,
    "name": "QuickGPT",
    "version": "1.0",
    "description": "A Chrome Extension that queries ChatGPT API with highlighted text",
    "icons": {
        "128": "icon.png"
    },
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": true
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "permissions": [
        "contextMenus",
        "storage",
        "tabs",
        "http://*/",
        "https://*/"
    ],
    "browser_action": {
        "default_popup": "popup.html"
    }
}